<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.5.2</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>org.silentsoft</groupId>
    <artifactId>hits</artifactId>
    <version>1.1.0</version>

    <name>Hits</name>
    <description>Hit Counter for Your GitHub or Any Kind of Websites You Want</description>
    <url>https://github.com/silentsoft/hits</url>

    <scm>
        <url>https://github.com/silentsoft/hits.git</url>
    </scm>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Hyesung Lee</name>
            <email>hyesung.lee@silentsoft.org</email>
            <url>https://github.com/silentsoft</url>
        </developer>
    </developers>

    <properties>
        <java.version>1.8</java.version>
    </properties>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <activatedProfile>dev</activatedProfile>
                <npmBuildScript>build:dev</npmBuildScript>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <activatedProfile>production</activatedProfile>
                <npmBuildScript>build</npmBuildScript>
            </properties>
            <build>
                <finalName>${project.artifactId}</finalName>
            </build>
        </profile>
    </profiles>

    <build>
        <finalName>${project.artifactId}-${project.version}-${activatedProfile}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <!-- replace tokens with parameterised values (application.properties) -->
                <filtering>true</filtering>
                <excludes>
                    <!-- This directory must be copied through the 'npm run build' command. -->
                    <exclude>public/**</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <executions>
                    <execution>
                        <id>npm-install</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>npm</executable>
                            <arguments>
                                <argument>install</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>npm-run-build</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>npm</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>${npmBuildScript}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <version>2.0.0</version>
                <configuration>
                    <excludedScopes>test,provided</excludedScopes>
                    <excludedTypes>pom,maven-plugin</excludedTypes>
                    <excludedArtifacts>spring-boot-starter.*</excludedArtifacts>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.silentsoft</groupId>
            <artifactId>csscolor4j</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>org.silentsoft</groupId>
            <artifactId>simpleicons4j</artifactId>
            <version>1.3.0</version>
        </dependency>
        <dependency>
            <groupId>org.silentsoft</groupId>
            <artifactId>badge4j</artifactId>
            <version>1.5.2</version>
        </dependency>
        <dependency>
            <groupId>org.silentsoft.oss</groupId>
            <artifactId>notice-file-generator</artifactId>
            <version>2.3.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>
